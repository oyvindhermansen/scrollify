  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.6.4",
    "babel-core": "^6.6.4",
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.6.0",
    "chai": "^3.5.0",
    "eslint": "^3.16.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
